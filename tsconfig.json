{   
    "compilerOptions": {
        "outDir": "./dist",
        "sourceMap": true,
        "baseUrl": ".",
       
        "module": "esnext",
        "target": "es5",
        "lib": [
          "es6",
          "dom",
          "es2017"
        ],
        "allowJs": true,
        "jsx": "react",
        "moduleResolution": "node",
        "rootDir": "/",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        // "noImplicitAny": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": true,
        
        "allowSyntheticDefaultImports": true,
       
        "noImplicitAny": false,
       
        "resolveJsonModule": true,
      
        "experimentalDecorators": true,
        "skipLibCheck": true,
        
        "paths": {
            "Config": [
                "./config.dev.json"
            ],
            "@/*": [
                "./src/debug/*"
              ],
              "utils/*": [
                "./src/debug/utils/*",
                "./src/utils/*"
              ]
              ,
              "config": [
                "./src/debug/config"
              ],
              "types": [
                "node"
              ]
        }
    },
    "files": [
        "typeings\\neo-ts.d.ts"
    ],
    "include": [
        "./src/**/*",
        "./src/debug/**/*",
        "./src/debug/utils/**/*",
        
    ],
    "exclude": [
        "./test/**/*",
        "build",
        "scripts",
        "acceptance-tests",
        "webpack",
        "jest",
        "public",
        "src/setupTests.ts",
        "node_modules"
    
    ]
}
